{
        "configurations": [
                {
                        "name": "C/C++: arm-none-eabi-gcc Compilar e depurar o arquivo ativo",
                        "type": "cppdbg",
                        "request": "launch",
                        "program": "${fileDirname}/${fileBasenameNoExtension}",
                        "args": [],
                        "stopAtEntry": false,
                        "cwd": "${fileDirname}",
                        "environment": [],
                        "externalConsole": false,
                        "MIMode": "gdb",
                        "setupCommands": [
                                {
                                        "description": "Habilitar a reformatação automática para gdb",
                                        "text": "-enable-pretty-printing",
                                        "ignoreFailures": true
                                },
                                {
                                        "description": "Definir Tipo de Desmontagem como Intel",
                                        "text": "-gdb-set disassembly-flavor intel",
                                        "ignoreFailures": true
                                }
                        ],
                        "preLaunchTask": "C/C++: arm-none-eabi-gcc arquivo de build ativo",
                        "miDebuggerPath": "/bin/gdb"
                }
        ],
        "version": "2.0.0"
}